<!DOCTYPE html>
<html>
<head>
  <title>Flickr</title> 
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render :partial => "shared/navbar" %> 

  <div class="container-fluid">
    <div class="row-fluid">
      <% if user_signed_in? %>
        <div class="span1 bs-docs-sidebar" data-spy="affix" data-offset="50">
          <ul class="nav nav-list bs-docs-sidenav">
            <li><a href="<%= user_path(current_user) %>"></i>Profile</a></li>
            <li class="divider"></li>
            <li><a href="#"></i>Photos</a></li>
            <li class="divider"></li>
            <li><a href="#"></i>Albums</a></li>
            <li class="divider"></li>
            <li><a href="<%= user_groups_path(current_user) %>"></i>Groups</a></li>
            <li class="divider"></li>
            <li><a href="<%= new_photo_path %>"></i>Favorites</a></li>
            <li class="divider"></li>
            <li><a href="<%= new_photo_path %>"></i>Upload</a></li>
          </ul>
        </div>
      <% end %>

      <div class="well span11">
        <% flash.try(:each) do |name, msg| %>
          <%= msg %>
        <% end %>

        <div id="yield">
          <%= yield %>
        </div>

      </div>
    </div>
  </div>

  
</body>
</html>
