      url: "/followings",
      type: "POST",
      data: { followee_id: followee_id },
      success: function(data) {
        console.log(data);
        $("a#follow").toggle();
        $('a#unfollow').toggle();
      }
    });
  });

  $('a#unfollow').on("click", function(event) {
