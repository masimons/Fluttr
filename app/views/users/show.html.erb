            <div style="float:left; text-align:center; padding-right:25px;">
              <label>
                <img src="<%= photo.image_url %>/convert?w=100&h=100&fit=clip"></img><br>
                <input type="checkbox" id="photo<%= photo.id %>" name="photo_ids[]" value="<%= photo.id %>">
              </label>
            </div>
          </div>

        <% end %>
    <% end %>
